<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:form="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.yunwei.frame.view.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/UserInfo_HeadView_imageView"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_gravity="center"
                android:layout_marginBottom="20dip"
                android:layout_marginTop="20dip"
                android:src="@mipmap/homepage_headimg_defaut" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dip"
                android:background="@color/white"
                android:orientation="vertical">

                <com.yunwei.frame.widget.FormWriteView
                    android:id="@+id/UserInfo_account_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    form:wvItemName="账号" />

                <com.yunwei.frame.widget.FormWriteView
                    android:id="@+id/UserInfo_depart_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    form:wvItemName="部门" />

                <com.yunwei.frame.widget.FormWriteView
                    android:id="@+id/UserInfo_company_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    form:wvItemName="单位" />

            </LinearLayout>
        </LinearLayout>
    </com.yunwei.frame.view.ReboundScrollView>
</LinearLayout>